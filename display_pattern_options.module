    $form['#submit'][] = '_display_pattern_options_panels_form_submit';

}

/**
 * Implements hook_menu().
 *
 * @return array
 */
function display_pattern_options_menu(){
    return _display_pattern_options_add_custom_paths();
}

/**
 * Add custom ajax endpoints
 *
 * @return array
 */
function _display_pattern_options_add_custom_paths(){

    $items = array();

    $items['display-pattern-options/panels/entityreference'] = array(
        'page callback' => '_display_pattern_options_panels_ajax_get_form',
        // pass form id as argument to page callback function
        'page arguments' => array('ctools_entity_field_content_type_formatter_styles'),
        // Ensure correct format for rendered content
        'delivery callback' => 'ajax_deliver',
        'access callback' => TRUE,
        // Ensure correct theme is used for custom ajax path
        'theme callback' => 'ajax_base_page_theme',
        'type' => MENU_CALLBACK
    );

    return $items;
}